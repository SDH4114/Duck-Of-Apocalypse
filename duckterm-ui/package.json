{
  "name": "duck-of-apocalypse",
  "version": "0.1.1",
  "description": "Duck Of Apocalypse UI powered by Electron + xterm.js",
  "main": "src/main.js",
  "author": "SDH",
  "private": true,
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.doa.app",
    "productName": "Duck Of Apocalypse",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "main.js",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": ["dmg", "zip"],
      "icon": "assets/icon.icns"
    }
  },
  "devDependencies": {
    "electron": "30.0.0",
    "electron-builder": "26.0.12"
  },
  "dependencies": {
    "node-pty": "1.0.0",
    "xterm": "5.3.0",
    "xterm-addon-fit": "0.8.0"
  }
}